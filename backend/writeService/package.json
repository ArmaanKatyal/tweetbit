{
    "name": "write_api",
    "version": "1.0.0",
    "main": "src/server.ts",
    "scripts": {
        "build": "tsc",
        "start": "NODE_ENV=prod node ./build/server.js",
        "dev": "NODE_ENV=dev ts-node ./src/server.ts",
        "format": "prettier --write 'src/**/*.ts'",
        "coverage": "nyc yarn test:unit",
        "proto:gen": "./scripts/proto-gen.sh",
        "test:int": "./scripts/run-integration.sh",
        "test:int:ui": "./scripts/run-integration.sh --ui",
        "test:unit": "vitest -c ./test/vitest.config.unit.ts",
        "test:unit:ui": "vitest -c ./test/vitest.config.unit.ts --ui"
    },
    "repository": "https://github.com/ArmaanKatyal/tweetbit",
    "author": "ArmaanKatyal",
    "license": "MIT",
    "dependencies": {
        "@grpc/grpc-js": "^1.8.9",
        "@grpc/proto-loader": "^0.7.5",
        "@prisma/client": "^4.10.1",
        "@types/config": "^3.3.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-pino-logger": "^4.0.3",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.0",
        "config": "^3.3.9",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-pino-logger": "^7.0.0",
        "joi": "^17.7.0",
        "jsonwebtoken": "^9.0.0",
        "pino": "^8.9.0",
        "pino-http": "^8.3.3",
        "pino-pretty": "^9.1.1",
        "supertest": "^6.3.3",
        "ts-proto": "^1.139.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "grpc_tools_node_protoc_ts": "^5.3.3",
        "nyc": "^15.1.0",
        "prettier": "^2.8.4",
        "prisma": "^4.10.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "vitest": "^0.28.5"
    }
}
