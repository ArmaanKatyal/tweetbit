{
    "name": "write_api",
    "version": "1.0.0",
    "main": "src/server.ts",
    "scripts": {
        "build": "tsc && cp -r ./proto ./build",
        "start": "NODE_ENV=prod node ./build/src/server.js",
        "dev": "NODE_ENV=dev ts-node ./src/server.ts",
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "coverage": "nyc yarn test",
        "proto:gen": "./scripts/proto-gen.sh",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' NODE_ENV=test mocha -r ts-node/register 'test/**/*.ts'"
    },
